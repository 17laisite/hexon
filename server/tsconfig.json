{
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "noImplicitAny": true,
    "allowJs": true,
    "target": "es2015",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/server/*"],
    },
  },
}
